{
	"productName": "Gale",
	"version": "1.10.0",
	"identifier": "com.kesomannen.gale",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173"
	},
	"bundle": {
		"active": true,
		"category": "Game",
		"copyright": "",
		"targets": "all",
		"externalBin": [],
		"createUpdaterArtifacts": true,
		"shortDescription": "A modern mod manager for Thunderstore",
		"longDescription": "",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": ""
		},
		"linux": {
			"deb": {
				"depends": []
			}
		},
		"resources": [],
		"fileAssociations": [
			{
				"ext": [
					"r2z"
				],
				"mimeType": "application/zip"
			}
		]
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNDRkNCMzE4NDIyOTQ1QjQKUldTMFJTbENHTFA4UE9Fd1RocjRDRm9uVmdiUlUxdmw1ZEwvaXRJZW45VFVSeXozUkYxaUFmZEsK",
			"endpoints": [
				"https://gist.githubusercontent.com/Kesomannen/58b4f08009e7b7b5baaea253ebccb94d/raw/"
